<h1><%= @article.title %></h1>
<p><%= @article.body %></p>
<h3>Comments</h3>
<%= render partial: 'articles/comment', collection: @article.comments %>
<%= render partial: 'comments/form' %>
<%= link_to "Back to Articles List", articles_path, class: "btn btn-primary" %>
<%= link_to "Edit", edit_article_path(@article), class: "btn btn-sm btn-warning" %>
<%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Do you really want to delete the article?"}, class:"btn btn-xs btn-danger" %>
